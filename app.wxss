@import 'weu.wxss';
@import 'iconfont.wxss';
view{
  margin: 0;
  padding: 0;
}
.contain {
  height: 110vh;
  width: 100vw;
  background-color: rgb(253, 252, 248);
}
.banner {
  width: 200rpx;
  height: 200rpx;
}

.topimage {
  position: absolute;
  top: 1rpx;
}

.buttonstyle {
  line-height: 80rpx;
  text-align: center;
  position: absolute;
  background-color: #f36838;
  width: 150rpx;
  height: 80rpx;
  right: 1rpx;
  color: white;
}

.buttonview {
  position: relative;
  width: 100vw;
  height: 150rpx;
}

.roomdetail {
  padding: 30rpx 0 30rpx 150rpx;
  border-bottom: solid 1px black;
}

.top {
  text-align: center;
  margin: 20rpx;
  margin-top: 100rpx;
  padding: 20rpx;
  height: 40%;
}

.room {
  position: relative;
  padding: 15rpx;
  margin: 40rpx auto;
  width: 80vw;
  height: auto;
  background-color: white;
  border-color: rgb(159, 161, 163);
  border-style: solid;
  border-radius: 15rpx;
  border-width: 1rpx;
  color: black;
  letter-spacing: 5rpx;
}

.ifnothavedata {
  border-radius: 187rpx;
  border: 1px solid;
  background-color: white;
  width: 375rpx;
  height: 375rpx;
  text-align: center;
  line-height: 375rpx;
  margin: 150rpx auto;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 30rpx;
  color: #f36838;
}

.room:hover {
  background-color: rgb(237, 236, 232);
}

.roomabout {
  position: relative;
  width: 90vw;
  height: auto;
  padding-bottom: 100rpx;
  margin: 30rpx auto;
  border: 1px solid;
  border-bottom-left-radius: 30vw;
  border-bottom-right-radius: 30vw;
  background-color: white;
}

.topfont {
  font-size: 40rpx;
  margin: 10rpx;
  color: white;
  text-align: center;
}

.button {
  width: 93vw;
  color: white;
  background-color: #f36838;
  margin: 40rpx auto;
  border: 10rpx;
}

.PersonOrRoomdetail {
  padding: 15rpx;
  margin: 40rpx auto;
  width: 85vw;
  height: auto;
  background-color: white;
  border-color: rgb(159, 161, 163);
  border-style: dotted;
  border-radius: 15rpx;
  border-width: 1rpx;
  color: black;
  letter-spacing: 5rpx;
}

.textfont {
  height: auto;
  margin: 15rpx;
  color: gray;
  font-size: 28rpx;
}

.title {
  font-size: 35rpx;
}

.table {
  border: 1px solid #ccc;
  width: 95vw;
  margin: 0 auto;
}

.tr {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.th {
  font-weight: 900;
  background: #f36838;
  font-size: 14px;
  color: white;
}

.th, .td {
  padding: 10px;
  width: 100%;
  text-align: center;
  border-bottom: 1px solid #ccc;
}

.td {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 10px;
}

.button_q {
  margin: 5px;
  background-color: #f36838;
}

.freshUser {
  margin: 50rpx auto;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}

.itemView {
  padding: 5px;
  color: white;
  font-weight: bold;
  text-align: center;
  border: 1px solid rgb(159, 161, 163);
  width: auto;
  margin: 10px 10px;
  background: linear-gradient(#96fbc4, #f9f586);
  border-radius: 10px;
  box-shadow: 10px 10px 20px rgb(159, 161, 163);
  animation: myfirst 5s;
}



.footView {
  display: flex;
  flex-direction: row;
  justify-content: center;
  position: fixed;
  bottom: 1px;
  border: 1px solid black;
  width: 100vw;
  height: 50px;
}

.backing {
  border: 1px solid black;
  height: 50px;
  width: 20vw;
  text-align: center;
  line-height: 50px;
}

.attending {
  height: 50px;
  border: 1px solid black;
  width: 60vw;
  text-align: center;
  line-height: 50px;
  animation: second 4s infinite;
}

.ending {
  border: 1px solid black;
  height: 50px;
  width: 20vw;
  text-align: center;
  line-height: 50px;
}

.backing:hover {
  background: rgb(237, 236, 232);
}

.ending:hover {
  background: rgb(237, 236, 232);
}
.messageIcon{
  width:30px;
  height: 30px;
}
.newApplyCount{
  display: flex;
  flex-direction: row;
  align-items: center;
  position: fixed;
  left: 10vw;
  bottom: 200px;
  z-index: 999;
}
.countStyle{
  width: 30px;
  height: 20px;
  border-radius: 5px;
  background-color: red;
  color: white;
  text-align: center;
}
