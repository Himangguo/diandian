.swiper-tab {
    width: 100%;
    border-bottom: 2rpx solid #777;
    text-align: center;
    line-height: 80rpx;
}

.swiper-tab-list {
    font-size: 30rpx;
    display: inline-block;
    width: 33.33%;
    color: #777;
}

.on {
    color: #da7c0c;
    border-bottom: 5rpx solid #da7c0c;
}

.swiper-box {
    display: block;
    height: 100%;
    width: 100%;
    overflow: hidden;
}
.swiper-box view {
    text-align: center;
}
.checkContain{
    width: 100vw;
}
.checkBox{
    width: 100vw;
    height: 60px;
    display: flex;
    align-items: center;
}
.agree,.disagree{
    width: 50px;
    border:1px solid;
}
.item{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100%;
    margin-left: 30rpx;
    width: 25%;
}
.head{
    width: 50px;
    height: 50px;
    border-radius: 25px;
    background-color: rgb(192,192,192);
    margin-left: 30rpx;
}
.headImage{
    width: 40px;
    height: 40px;
}
.dealTime,.sendTime,.roomnumber{
    font-size: 12px;
    color: gray;
}
.dealresult{
    color: #da7c0c;
}
.confirmApply{
    width: 50px;
    height: 20px;
    font-size: 15px;
    background-color: rgb(192,192,192);
    border-radius: 6px;
    letter-spacing: 2px;
    margin: 2px;
}
.navigationBar{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}
.navItem{
    width: 30%;
    margin: 10px;
    letter-spacing: 1px;
    color: #777;
}