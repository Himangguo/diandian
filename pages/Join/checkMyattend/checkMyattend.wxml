<view class='contain'>
  <view class="table">
    <view class='tr'>
      <view class='th'>序号</view>
      <view class='th'>开始</view>
      <view class='th'>签到</view>
      <view class='th'>状态</view>
    </view>
    <block wx:if="{{haveData}}" wx:for="{{userdetails}}" wx:key="{{item.id}}">
      <view class="tr">
        <view class='td'>{{index+1}}</view>
        <view class='td'>{{item.roomdetail.begintime}}</view>
        <view class='td'>{{item.attendtime}}</view>
        <view class='td' wx:if="{{item.attendstatus == 1}}">到达</view>
        <view class='td' wx:if="{{item.attendstatus == 2}}">迟到</view>
        <view class='td' wx:if="{{item.attendstatus == 3}}">请假</view>
        <view class='td' wx:if="{{item.attendstatus == 4}}">旷课</view>
      </view>
    </block>

  </view>
  <view wx:if="{{!haveData}}" class="ifnothavedata">
    您还没有记录哦!
  </view>
</view>